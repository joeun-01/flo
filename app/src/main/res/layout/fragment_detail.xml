<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_album_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앨범명"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/detail_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아티스트"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_album_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/detail_publisher_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발매사"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_singer_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/detail_design_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기획사"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_publisher_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/detail_album_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IU 5th Album 'LILAC'"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/detail_singer_tv"
            app:layout_constraintTop_toTopOf="@+id/detail_album_tv"
            app:layout_constraintBottom_toBottomOf="@+id/detail_album_tv"/>

        <TextView
            android:id="@+id/detail_singer_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유 (IU)"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/detail_singer_tv"
            app:layout_constraintTop_toTopOf="@+id/detail_singer_tv"
            app:layout_constraintBottom_toBottomOf="@+id/detail_singer_tv"/>

        <TextView
            android:id="@+id/detail_publisher_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오엔터테인먼트"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/detail_singer_tv"
            app:layout_constraintTop_toTopOf="@+id/detail_publisher_tv"
            app:layout_constraintBottom_toBottomOf="@+id/detail_publisher_tv"/>

        <TextView
            android:id="@+id/detail_design_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDAM엔터테인먼트"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/detail_singer_tv"
            app:layout_constraintTop_toTopOf="@+id/detail_design_tv"
            app:layout_constraintBottom_toBottomOf="@+id/detail_design_tv"/>

        <TextView
            android:id="@+id/detail_introduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앨범소개"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_design_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/detail_introduce_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'아이유(IU)' 정규 5집 [LILAC]"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_introduce_tv"/>

        <TextView
            android:id="@+id/detail_introduce_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;안녕 꽃잎같은 안녕&quot;\n&quot;내 맘에 아무 의문이 없어 난 이 다음으로 가요&quot;"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@id/detail_introduce_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/detail_introduce_title_tv"/>

        <TextView
            android:id="@+id/detail_introduce_content2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20대의 마지막에 대해 화려한 인사를 예고했던 아이유가 봄\n내음과 함께 다섯 번째 정규앨범 [LILAC]으로 돌아왔다."
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="@id/detail_introduce_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_introduce_content_tv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>