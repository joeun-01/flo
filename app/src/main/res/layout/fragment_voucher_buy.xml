<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/voucher_buy_infinite"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/voucher_buy_infinite_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모바일 무제한 듣기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/voucher_buy_infinite_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₩9,900"
                android:textColor="@color/flo"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/voucher_buy_infinite_more"
                app:layout_constraintTop_toTopOf="@+id/voucher_buy_infinite_tv"
                app:layout_constraintBottom_toBottomOf="@id/voucher_buy_infinite_tv"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/voucher_buy_infinite_more"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/btn_arrow_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/voucher_buy_infinite_price_tv"
                app:layout_constraintBottom_toBottomOf="@id/voucher_buy_infinite_price_tv"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C4C8CC"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/voucher_buy_infinite_offline"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/voucher_buy_infinite"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/voucher_buy_infinite_offline_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모바일 무제한 듣기 + 오프라인 재생"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/voucher_buy_infinite_offline_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₩15,000"
                android:textColor="@color/flo"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/voucher_buy_infinite_offline_more"
                app:layout_constraintTop_toTopOf="@+id/voucher_buy_infinite_offline_tv"
                app:layout_constraintBottom_toBottomOf="@id/voucher_buy_infinite_offline_tv"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/voucher_buy_infinite_offline_more"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/btn_arrow_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/voucher_buy_infinite_offline_price_tv"
                app:layout_constraintBottom_toBottomOf="@id/voucher_buy_infinite_offline_price_tv"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C4C8CC"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/voucher_buy_restore_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In App 구매 복원"
            android:textColor="@color/gray_color"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/voucher_buy_infinite_offline"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/voucher_buy_information_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Store 구매안내"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/voucher_buy_restore_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/voucher_buy_information_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_store_buy_information"
            android:textColor="@color/middle_gray"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:paddingBottom="30dp"
            app:layout_constraintTop_toBottomOf="@+id/voucher_buy_information_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>