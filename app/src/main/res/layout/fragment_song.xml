<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/song_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/album_songs_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/album_songs_favorite_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="내 취향 MIX"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/album_songs_toggle_off_iv"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:src="@drawable/btn_toggle_off"
            app:layout_constraintTop_toTopOf="@id/album_songs_favorite_tv"
            app:layout_constraintStart_toEndOf="@+id/album_songs_favorite_tv"
            app:layout_constraintBottom_toBottomOf="@id/album_songs_favorite_tv" />

        <ImageView
            android:id="@+id/album_songs_toggle_on_iv"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:src="@drawable/btn_toggle_on"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/album_songs_favorite_tv"
            app:layout_constraintStart_toEndOf="@+id/album_songs_favorite_tv"
            app:layout_constraintBottom_toBottomOf="@id/album_songs_favorite_tv"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/album_songs_check_all_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/btn_playlist_select_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_songs_layout" />

    <TextView
        android:id="@+id/album_songs_check_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="전체선택"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/album_songs_check_all_iv"
        app:layout_constraintStart_toEndOf="@id/album_songs_check_all_iv"
        app:layout_constraintTop_toTopOf="@+id/album_songs_check_all_iv" />

    <ImageView
        android:id="@+id/album_songs_play_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/ic_browse_arrow_right"
        app:layout_constraintTop_toTopOf="@+id/album_songs_check_all_iv"
        app:layout_constraintEnd_toStartOf="@+id/album_songs_play_all_tv"
        app:layout_constraintTop_toBottomOf="@+id/album_songs_layout" />

    <TextView
        android:id="@+id/album_songs_play_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="전체듣기"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/album_songs_play_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/album_songs_play_iv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/album_songs_list_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_songs"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/album_songs_check_all_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>