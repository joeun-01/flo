<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_pannel1_background_iv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:src="@drawable/home_background1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/home_pannel1_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="포근하게 덮어주는 꿈의 목소리"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_pannel1_btn_play_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_pannel1_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/home_pannel1_title_tv" />

    <TextView
        android:id="@+id/home_pannel1_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 15곡 2022.01.11"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/home_pannel1_album_img_01_iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_pannel1_album_img_01_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp7"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/home_pannel1_album_img_02_iv"/>

    <TextView
        android:id="@+id/home_pannel1_album_title_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가을 아침"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/home_pannel1_album_img_01_iv"
        app:layout_constraintBottom_toTopOf="@id/home_pannel1_album_singer_01_tv"
        app:layout_constraintTop_toTopOf="@id/home_pannel1_album_img_01_iv"/>

    <TextView
        android:id="@+id/home_pannel1_album_singer_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/home_pannel1_album_img_01_iv"
        app:layout_constraintTop_toBottomOf="@id/home_pannel1_album_title_01_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel1_album_img_01_iv"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_pannel1_album_img_02_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp8"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/home_pannel1_background_iv"/>

    <TextView
        android:id="@+id/home_pannel1_album_title_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스토커"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/home_pannel1_album_img_02_iv"
        app:layout_constraintBottom_toTopOf="@id/home_pannel1_album_singer_02_tv"
        app:layout_constraintTop_toTopOf="@id/home_pannel1_album_img_02_iv"/>

    <TextView
        android:id="@+id/home_pannel1_album_singer_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10cm"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/home_pannel1_album_img_02_iv"
        app:layout_constraintTop_toBottomOf="@id/home_pannel1_album_title_02_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel1_album_img_02_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>